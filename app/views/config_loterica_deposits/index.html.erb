        <h6 class="mb-0">Depositos menores a 100R$</h6>
      </div>
      <div class="card-body field">
        <label>Prioridad 1</label><br>
        <%if @prioridad_min_1.present?%><%= @prioridad_min_1%><br>Cupos restantes: <%=@cupos_restantes1%><%else%><i>Sin Definir</i><%end%>
