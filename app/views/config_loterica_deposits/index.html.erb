        <%if @config_loterica_deposit.present?%><a class="btn btn-info d-block m-auto" href="/config_loterica_deposits/2/edit?edit=greater_than" onclick="show_preloader()">Editar</a><%else%><a class="btn btn-info d-block m-auto" href="/config_loterica_deposits/new?edit=greater_than" onclick="show_preloader()">Editar</a><%end%>
