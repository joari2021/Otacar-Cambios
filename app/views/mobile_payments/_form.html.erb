<script>
  
  div = document.getElementsByTagName("div")[11];
  var input = document.getElementsByTagName("input");
  var select = document.getElementsByTagName("select")[0];
  if (div.id === "error_explanation"){    
    
    formatNumberPhoneVzla(input[2]);
    formatDocumentoVzla(input[3]);
    validarSelect(select);
  }

  function habilitarSave() {
    botonSave = document.getElementById("btn");
    formulario = false
    if (input[2].className.indexOf("is-valid") != -1 && input[3].className.indexOf("is-valid") != -1 && select.className.indexOf("is-valid") != -1){
      formulario = true;
    }
    if (formulario == true){
      botonSave.removeAttribute("disabled");
    }else{
      botonSave.setAttribute("disabled","disabled");
    }
  }

</script>