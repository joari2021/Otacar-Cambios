                            "0174" => "BANPLUS BANCO COMERCIAL C.A",                         
                            "0157" => "DELSUR BANCO UNIVERSAL",
                            "0151" => "FONDO COMUN",                         
                            "0169" => "MIBANCO BANCO DE DESARROLLO, C.A.",
                            "0137" => "SOFITASA",
                        }
                        %>
                        <td class="align-middle"><span><%=bancos[payment.bank]%></span></td>
                        <td class="align-middle"><img src="/img/paises/<%=payment.country.capitalize%>.svg" class="img-fluid rounded-circle avatar" alt="<%=payment.country.capitalize%>" title="<%=payment.country.capitalize%>"/></td>
                        
                        <%part1 = payment.number_phone[0, 3]%>
                        <%part2 = payment.number_phone[-4,4]%>
                        <td class="align-middle"><span><%=part1 << "****" << part2%></span></td>
                        
                        <%part1 = payment.document[0, 2]%>
                        <%part2 = payment.document[-3,3]%> 
                        <%if payment.document.to_i <= 80000000
                            type_document = "V-"
                        elsif payment.document.to_i > 80000000 && payment.document < 100000000
                            type_document = "E-"
                        end%>
                        <td class="align-middle"><span><%=type_document << part1 << "***" << part2%></span></td>
                        
                        <%if current_user.is_admin?%>
                            <%if payment.status === "activo"%>
                                <td class="align-middle"><span class="badge badge-primary text-primary ml-2">Activo</span></td>
                            <%else%>
                                <td class="align-middle"><span class="badge badge-dark">Inactivo</span></td>
                            <%end%>
                            <td class="align-middle">|</td>
                            <td class="align-middle"><a href="/mobile_payments/<%=payment.id%>/edit" class="badge badge-info">Editar <i class="fas fa-cogs ml-2"></i></a></td>
                        <%end%>
                        <!--Boton Modal-->
                        <td class="align-middle"><a href="#" class="badge badge-secondary" data-toggle="modal" data-target="#mobilePaymentModal<%=payment.id%>">Ver <i class="far fa-eye ml-2"></i></a></td>

                        <!-- Modal -->
                        <div class="modal fade" id="mobilePaymentModal<%=payment.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel"><%=bancos[payment.bank]%></h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card border-success mb-3 m-auto" style="max-width:36rem;">
                                            <div class="card-header text-success">
                                                <div class="row">
                                                    <div class="col-6 text-right">Pais</div>
                                                    <div class="col-6 text-left">
                                                        <%=payment.country%>    
                                                    </div>
                                                    <div class="col-6 text-right">Cod. Banco</div>
                                                    <div class="col-6 text-left">
                                                        <%=payment.bank%>   
                                                    </div>
                                                    <div class="col-6 text-right">Nro Telefono</div>
                                                    <div class="col-6 text-left">
                                                        <%=payment.number_phone%> 
                                                    </div>                                  
                                                </div>                   
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <td class="align-middle"><a rel="nofollow" data-method="delete" href="/mobile_payments/<%=payment.id%>" data-confirm="Esta segur@ de eliminar esta cuenta?" class="badge badge-danger">Eliminar <i class="fas fa-trash-alt ml-2"></i></a></td>
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </div>
    <%end%>

    <%end%>
</div>
