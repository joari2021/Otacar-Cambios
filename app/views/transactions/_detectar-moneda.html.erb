<%if country === "Argentina" || country === "Colombia" || country === "Ecuador" || country === "Panama" || country === "USA"    
    @moneda_destinity = "$"
elsif country === "Brasil"
    @moneda_destinity = "R$"
elsif country === "Chile"
    @moneda_destinity = "CLP"
elsif country === "España"
    @moneda_destinity = "€"
elsif country === "Peru"
    @moneda_destinity = "S/"
elsif country === "Venezuela"
    @moneda_destinity = "Bs"  
end%>