<%render 'partials/name-and-cod-of-banks'%>
<%= link_to 'Volver', payment_methods_path, class:"btn btn-secondary text-white float-right position-fixed" %>
<div class="row justify-content-center mt-5">
    <div class="col-xl-7 col-lg-12">
        <div class="card mb-5 shadow-sm border-0 shadow-hover" style="border-radius:20px !important;">
            <div class="card-header bg-light border-0 pt-3 pb-0" >
                <h6 class="mb-0">Otros Bancos</h6>
            </div>
            <div class="card-body field">
                
                  <% @avalaible_banks.each do |avalaible_bank| %>
                    <div class="d-block">
                      <img src="/img/bancos/<%=avalaible_bank.bank%>.png" class="img-fluid avatar" alt="<%=avalaible_bank.bank%>" title="<%=@bancos[avalaible_bank.bank]%>"/>
                      <span class="ml-2 my-auto"><%=@bancos[avalaible_bank.bank]%>
                      
                      <a rel="nofollow" data-method="delete" href="/avalaible_banks/<%=avalaible_bank.id%>" data-confirm="Esta segur@ de eliminar este banco?" class="badge badge-danger d-inline-block float-right"><i class="fas fa-trash-alt"></i></a>
                      <br>
                    </div>
                    <hr>
                  <% end %>

                  <div class="d-block mt-4"><%= link_to 'Agregar', new_avalaible_bank_path, class:"btn btn-warning text-white" %></div>
            </div>
        </div>
    </div>
</div>

